{
  "[swift]": {
    "editor.defaultFormatter": "vknabel.vscode-apple-swift-format",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "swiftlint.enable": true,
  "swiftlint.autoLintWorkspace": true,
  "apple-swift-format.path": "swift format",
  "editor.rulers": [120],
  "cSpell.words": [
    "wina",
    "wallnut",
    "WKWebView",
    "SafariVC",
    "SFSafariViewController",
    "xmark",
    "checkmark",
    "circlepath",
    "subheadline",
    "autocorrection",
    "Autocapitalization",
    "Contentful",
    "WKURL"
  ]
}
